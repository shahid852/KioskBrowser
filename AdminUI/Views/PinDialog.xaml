<Window x:Class="AdminUI.Views.PinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Admin PIN"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Height="180" Width="320">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" FontWeight="ExtraBold" Text="PIN:" FontSize="16" Margin="0,0,0,10"/>
        <PasswordBox x:Name="txtPIN" Focusable="True" Grid.Row="1" FontSize="25" HorizontalContentAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Width="80" Margin="5" Padding="6,2" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Padding="6,2" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
